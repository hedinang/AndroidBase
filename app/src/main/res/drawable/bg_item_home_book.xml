<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#01000000"
                android:endColor="#10000000"
                android:angle="90"/>
            <corners
                android:topLeftRadius="@dimen/_4sdp"
                android:topRightRadius="@dimen/_4sdp" />
        </shape>
    </item>
    <item
        android:top="1.5dp"
        android:left="1dp"
        android:right="1dp">
        <shape>

            <corners
                android:topLeftRadius="@dimen/_4sdp"
                android:topRightRadius="@dimen/_4sdp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>