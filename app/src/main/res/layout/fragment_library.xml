<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fcd_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:elevation="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="30"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_normal_size_16"
            android:text="@string/library"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <FrameLayout
            android:id="@+id/btn_search"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_marginEnd="@dimen/margin_normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/ic_size_24"
                android:layout_height="@dimen/ic_size_24"
                android:src="@drawable/ic_search"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/btn_edit"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_search">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/ic_size_24"
                android:layout_height="@dimen/ic_size_24"
                android:src="@drawable/ic_edit" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_filter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/ic_size_24"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dark_filter"/>
        <TextView
            android:textColor="@color/text_dark"
            android:layout_marginHorizontal="@dimen/margin_normal"
            android:id="@+id/tv_filter"
            app:layout_constraintStart_toEndOf="@id/iv_filter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal_size_16"
            android:text="@string/filter"/>
        <ImageView
            android:id="@+id/iv_down"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/ic_size_24"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dark_down_arrow"/>
        <TextView
            android:textColor="@color/text_dark"
            android:layout_marginHorizontal="@dimen/margin_normal"
            android:id="@+id/tv_newest"
            app:layout_constraintEnd_toStartOf="@id/iv_down"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal_size_16"
            android:text="@string/newest"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_book_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        tools:listitem="@layout/item_library" />
</LinearLayout>